{
  "name": "motor-loop",
  "module": "src/index.ts",
  "description": "Motor loop is a typescript library that runs a game loop continuously. Notably, it adapts to frameRate to ensure your game always runs smoothly when the monitor refresh rate goes above or below 60hz.",
  "version": "1.0.10",
  "keywords": [
    "bun",
    "bunjs",
    "typescript",
    "template",
    "npm",
    "np",
    "publish",
    "git"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:jacklehamster/motor-loop.git"
  },
  "homepage": "<fill in homepage>",
  "author": {
    "name": "Jack Le Hamster",
    "email": "jacklehamster@gmail.com"
  },
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "tsc": "tsc",
    "start": "bun run index.ts",
    "test": "bun test",
    "build": "bun i && bun scripts/update-package.ts && rm -rf *.tsbuildinfo && rm -rf dist/*.* && bun run bundler/bundler.ts && bun run test && bun run build:declaration",
    "build:declaration": "tsc --emitDeclarationOnly --project tsconfig.types.json",
    "build:example": "cd example && bun i && bun run build && cd ..",
    "list": "bun run samples/list-scripts.tsx",
    "example": "cd example && bun start && cd ..",
    "make-repo-ssh": "./make-repo-ssh.sh",
    "commit-all": "./commit-all.sh",
    "np": "bun run build && bun run build:example && bun run make-repo-ssh && bun run commit-all && np"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/bun": "^1.0.4",
    "@types/jest": "^29.5.6",
    "@types/mocha": "^10.0.3",
    "@types/react": "^18.2.21",
    "bun": "^1.0.25",
    "bun-types": "latest",
    "jest": "^29.7.0",
    "np": "^9.2.0",
    "png-to-ico": "^2.1.8",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "bun-pool": "^1.0.7",
    "fixed-framerate-loop": "^1.0.8"
  }
}
